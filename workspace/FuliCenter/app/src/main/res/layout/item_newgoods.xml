<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!--商品图片-->
    <ImageView
        android:id="@+id/newgoods_pic"
        android:src="@drawable/nopic"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <!--商品简介-->

    <TextView
        android:layout_below="@+id/newgoods_pic"
        android:id="@+id/newgoods_name"
        android:text="这里是商品的内容"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--TextView-->
    <TextView
        android:layout_below="@+id/newgoods_name"
        android:id="@+id/newgoods_price"
        android:text="这里是商品的价格"
        android:layout_marginLeft="5dp"
        android:textColor="#FF66B6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>